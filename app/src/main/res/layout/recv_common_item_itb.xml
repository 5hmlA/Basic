<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="@drawable/selector_jbackground"
                android:clickable="true"
                android:layoutAnimation="@anim/layaniscalecenter"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/im_recv_common_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher"/>

    <Button
        android:id="@+id/btn_recv_common_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:text="下载"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/common_middle"
        android:animateLayoutChanges="true"
        android:layoutAnimation="@anim/layaniscalecenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/im_recv_common_icon"
        android:layout_toLeftOf="@+id/btn_recv_common_right"
        android:layout_toRightOf="@+id/im_recv_common_icon"
        android:layout_toStartOf="@+id/btn_recv_common_right"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_recv_common_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="存档名称r"/>

        <TextView
            android:id="@+id/tv_recv_common_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="作者"/>
        <TextView
            android:id="@+id/tv_recv_common_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="下载量"/>

    </LinearLayout>

</RelativeLayout>