<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="@drawable/selector_jforground"
                android:clickable="true"
                android:layoutAnimation="@anim/layleftin"
                android:gravity="center_vertical">

    <ImageView
        android:id="@+id/im_recv_recom_adv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher"/>

    <Button
        android:id="@+id/btn_recv_recom_adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:text="下载"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/recom_middle"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/layanipushup"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/im_recv_recom_adv_icon"
        android:layout_toLeftOf="@+id/btn_recv_recom_adv"
        android:layout_toRightOf="@+id/im_recv_recom_adv_icon"
        android:layout_toStartOf="@+id/btn_recv_recom_adv"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_recv_recom_adv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recom_welfare_center"/>

        <TextView
            android:id="@+id/tv_recv_recom_adv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recom_welfare_desc"/>

    </LinearLayout>

</RelativeLayout>